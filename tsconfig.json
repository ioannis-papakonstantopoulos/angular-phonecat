{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true, 
        "removeComments": false,
        "noImplicitAny": false,  // change to TRUE at the end
        "suppressImplicitAnyIndexErrors": true
    }, 
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        // "typings/main",
        // "typings/main.d.ts",
        "**/*.spec.ts"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "lib" : ["es5", "dom"]
}